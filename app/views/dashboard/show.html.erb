<div class="row">
  <div class="col s12 section">
    <h4>Dashboard</h4>
  </div>
</div>

<div class="row">
  <div class="col s12 section">
    <h5>Recent Games</h5>
  </div>
</div>

<div class="row">
  <table class="striped recent-games-table">
    <thead>
      <tr>
        <th>Winner</th>
        <th>Loser</th>
        <th>Amount</th>
      </tr>
    </thead>

    <tbody>
      <% @recent_games.each do |recent_game| %>
        <tr>
          <td><%= recent_game.winner.name %></td>
          <td><%= recent_game.loser.name %></td>
          <td><%= number_to_currency(recent_game.price_in_dollars) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to new_game_path, class: "btn-floating btn-large waves-effect waves-light red dashboard__new-game-link" do %>
  <i class="material-icons">add</i>
<% end %>
