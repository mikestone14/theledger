<div class="row">
  <div class="col s12 section">
    <h4>Seasons</h4>
  </div>
</div>

<div class="row">
  <ul class="collection">
    <% @seasons.each do |season| %>
      <li class="collection-item" id="season-<%= season.id %>">
        <div class="season__item-content">
          <%= link_to season.name, season_leaderboards_path(season) %>

          <% if season.active? %>
            <span class="new badge" data-badge-caption="active"></span>
          <% else %>
            <%= form_tag activate_season_path(season), method: :patch do %>
              <%= submit_tag "activate", class: "btn blue btn-small" %>
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
